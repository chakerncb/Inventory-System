    <script>
      // Color Settings
      document.querySelectorAll('.color-box').forEach(box => {
        box.addEventListener('click', function () {
          const target = this.getAttribute('data-target');
          const colorClass = this.getAttribute('data-class');

          if (target === 'sidebar') {
            const sidebar = document.querySelector('.main-sidebar');
            // Remove existing color classes
            sidebar.classList.remove(...Array.from(sidebar.classList).filter(cls => cls.startsWith('sidebar-dark-') || cls.startsWith('sidebar-light-')));
            // Add the new color class
            sidebar.classList.add(colorClass);
            localStorage.setItem('sidebarColorClass', colorClass);
          } else if (target === 'header') {
            const header = document.querySelector('.main-header');
            // Remove existing color classes
            header.classList.remove(...Array.from(header.classList).filter(cls => cls.startsWith('navbar-')));
            // Add the new color class
            header.classList.add(colorClass);
            localStorage.setItem('headerColorClass', colorClass);
          }
        });
      });

      // Load Saved Settings
      window.addEventListener('DOMContentLoaded', function () {
        const sidebarColorClass = localStorage.getItem('sidebarColorClass');
        const headerColorClass = localStorage.getItem('headerColorClass');

        if (sidebarColorClass) {
          const sidebar = document.querySelector('.main-sidebar');
          sidebar.classList.add(sidebarColorClass);
        }
        if (headerColorClass) {
          const header = document.querySelector('.main-header');
          header.classList.add(headerColorClass);
        }
      });

      // Save Confirmation
      document.getElementById('settingsForm').addEventListener('submit', function (e) {
        e.preventDefault();
        alert('Settings saved successfully!');
      });
    </script>

