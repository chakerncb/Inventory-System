    <script>


document.addEventListener('DOMContentLoaded', function() {
    const editButton = document.getElementById('editButton');
    const saveButton = document.getElementById('saveButton');
    const passwordModal = new bootstrap.Modal(document.getElementById('passwordModal'));
    const confirmPasswordBtn = document.getElementById('confirmPasswordBtn');
    const modalPassword = document.getElementById('modalPassword');
    const passwordAlert = document.getElementById('passwordAlert');
    const inputs = document.querySelectorAll('#profileForm input, #profileForm textarea');

    // Open the modal when Edit is clicked
    editButton.addEventListener('click', function() {
        modalPassword.value = ''; // Clear password field
        passwordAlert.classList.add('d-none'); // Hide alert
        passwordModal.show();
    });

    // Confirm Password
    confirmPasswordBtn.addEventListener('click', function() {
        const enteredPassword = modalPassword.value;

        // Dummy password check (replace with real authentication logic)
        if (enteredPassword === 'password') {
            modalPassword.value = ''; // Clear the input
            passwordModal.hide();
            passwordAlert.classList.add('d-none'); // Hide alert

            // Enable editing
            inputs.forEach(input => input.disabled = false);
            editButton.style.display = 'none';
            saveButton.style.display = 'block';
        } else {
            passwordAlert.classList.remove('d-none'); // Show alert
            modalPassword.value = '';
        }
    });

    // Save the updated information
    saveButton.addEventListener('click', function(event) {
        event.preventDefault();
        inputs.forEach(input => input.disabled = true);
        editButton.style.display = 'block';
        saveButton.style.display = 'none';
        alert('Profile updated successfully!');
    });
});


